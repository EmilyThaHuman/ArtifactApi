# Server Configuration
PORT=3000
NODE_ENV=development
API_URL=http://localhost:3000

# Logging Configuration
LOG_LEVEL=info               # Logging level (info, error, warn, debug)
LOG_REQUEST_BODY=false       # Whether to log request bodies (true/false)
LOG_RESPONSE_BODY=false      # Whether to log response bodies (true/false)

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000  # 1 minute
RATE_LIMIT_MAX=60           # 60 requests per window

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Serper (Google Search API)
SERPER_API_KEY=your_serper_api_key_here
GOOGLE_SERPER_API_KEY=your_serper_api_key_here  # Alternative name

# Pinecone
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment_here

# Firecrawl
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# Perplexity
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Together AI
TOGETHER_API_KEY=your_together_api_key_here

# Stripe
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here 